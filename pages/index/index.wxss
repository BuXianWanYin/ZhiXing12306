@import '../../styles/theme.wxss';

.index-page {
  background: #f6f8fa;
  min-height: 100vh;
  padding-bottom: 140rpx; /* 底部留出tabbar空间 */
}

/* 顶部标题栏样式 */
.title-bar {
  background: linear-gradient(180deg, #6ec6ff 0%, #3a8dff 100%);
  padding-top: 100rpx;   /* 适配大部分机型的状态栏 */
  padding-bottom: 20rpx;
  text-align: center;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.title {
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
}

.search-card {
  background: #fff;
  margin: 10rpx 24rpx 0 24rpx;
  border-radius: 18rpx;
  box-shadow: 0 4rpx 24rpx #e6eaf0;
  padding: 36rpx 28rpx 40rpx 28rpx;
  position: relative;
}

.tab-switch {
  display: flex;
  margin-bottom: 24rpx;
  border-bottom: 2rpx solid #e6eaf0;
}

.tab {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: #888;
  padding: 16rpx 0;
  border-radius: 18rpx 18rpx 0 0;
  background: #f0f4fa;
  margin-right: 12rpx;
  border-bottom: 4rpx solid transparent;
}

.tab.active {
  color: #3a8dff;
  background: #fff;
  border-bottom: 4rpx solid #3a8dff;
}

.station-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top:18px;
  margin-bottom: 38rpx;
  border-bottom: 1rpx solidrgb(221, 222, 224);
  padding-bottom: 20rpx;
}

.station {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  color: #222;
  font-weight: bold;
}

.arrow {
  width: 40rpx;
  height: 40rpx;
  margin: 0 12rpx;
}

.date-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
  margin-left:30px;
  margin-bottom: 38rpx;
}

.date-info {
  display: flex;
  align-items: baseline; 
}

.date {
  font-size: 36rpx;
  color: #222;
  font-weight: bold; 
  margin-right: 8rpx;
}

.day-text {
  font-size: 24rpx;
  color: #888;
}

.weekday {
  display: none;
}

.options {
  display: flex;
  gap: 24rpx;
}

.option-item {
  display: flex;
  align-items: center;
}

.radio {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #ccc;
  border-radius: 50%;
  margin-left: 8rpx;
  box-sizing: border-box;
}

.radio.checked {
  border-color: #3a8dff;
  background-color: #3a8dff;
  position: relative;
}

.radio.checked::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 12rpx;
  height: 12rpx;
  background-color: #fff;
  border-radius: 50%;
}

.option-text {
  font-size: 26rpx;
  color: #666; 
}

.option-text.active {
  color: #3a8dff;
}

.switch-label {
  display: none;
}

.search-btn-wrapper {
  margin-top: 36rpx;
  margin-bottom: 28rpx;
  display: block;
  width: auto;
}

.search-btn {
  width: 100% !important;
  height: 88rpx;
  background: linear-gradient(90deg, #6ec6ff 0%, #3a8dff 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 32rpx;
  font-weight: bold;
  border: none;
  text-align: center;
  line-height: 88rpx;
  margin: 0 !important;
  padding: 0 !important;
  box-sizing: border-box;
}

.history-row {
  margin-top: 0;
  display: flex;
  gap: 16rpx;
}

.history-item {
  background: #f0f4fa;
  color: #888;
  border-radius: 24rpx;
  padding: 8rpx 24rpx;
  font-size: 24rpx;
}

.clear-btn {
  color: #3a8dff;
  font-size: 24rpx;
  margin-top:4px;
}

.quick-nav {
  display: flex;
  justify-content: space-around;
  margin: 40rpx 24rpx 0 24rpx;
  background: #fff;
  border-radius: 18rpx;
  box-shadow: 0 4rpx 24rpx #e6eaf0;
  padding: 28rpx 0;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #222;
}

.nav-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 8rpx;
}