.title-bar {
  background: linear-gradient(180deg, #6C63FF 0%, #8F7CFF 100%);
  padding-top: 100rpx;   /* 适配大部分机型的状态栏 */
  padding-bottom: 20rpx;
  text-align: center;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  z-index: 100;
}

.title {
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  flex: 1;
  text-align: center;
}
.page {
  background: #F7F8FA;
  min-height: 100vh;
  padding-bottom: 160rpx; /* 增加底部内边距，留出固定模块的空间 */
}
.top{
   background: #6C63FF;
   padding-top: 32rpx;
   padding-bottom: 1rpx;
}
.top-bar {
  display: flex;
  align-items: center;
  background: #fff; /* 白色背景 */
  color: #222; /* 文字颜色 */
  padding: 24rpx 32rpx; /* 内边距 */
  border-radius: 16rpx; /* 圆角 */
  margin: 32rpx 24rpx; /* 外边距，调整位置 */
  font-size: 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(108,99,255,0.08); /* 阴影 */
  margin-top: 90px; 
}
.policy-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}
.policy-tag {
  border: 1rpx solid #6C63FF; /* 淡蓝色边框 */
  border-radius: 4rpx; /* 小圆角 */
  padding: 4rpx 8rpx; /* 内边距 */
  margin-right: 12rpx; /* 与文字间距 */
  display: flex;
  align-items: center;
}
.policy-text {
  color: #6C63FF; /* 淡蓝色文字 */
  font-size: 24rpx; /* 字体大小 */
}
.top-bar-text {
  flex: 1; /* 占据剩余空间 */
  color: #222; /* 文字颜色 */
}
.arrow-right {
  width: 24rpx; /* 图标大小 */
  height: 24rpx; /* 图标大小 */
  margin-left: 12rpx; /* 与文字间距 */
  vertical-align: middle;
  filter: drop-shadow(0 0 2px #FFB347);
}
.ticket-list {
  margin: 32rpx 0 0 0;
}
.ticket-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  border-radius: 16rpx;
  margin: 0 24rpx 16rpx 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(108,99,255,0.06);
}
.ticket-left-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.ticket-info {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #222;
}
.city {
  margin: 0 4rpx;
}
.arrow {
  color: #6C63FF;
  font-size: 32rpx;
  margin: 0 8rpx;
}
.ticket-date {
  color: #888;
  font-size: 26rpx;
  margin-top: 8rpx;
}
.ticket-subtitle {
  margin-top: 8rpx;
  color: #b0b0b0;
  font-size: 24rpx;
}
.ticket-status {
  margin-left: 24rpx;
}
.status-btn {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 500;
  border: 2rpx solid #e0e0e0;
}
.status-success {
  background: #F3F2FF;
  color: #6C63FF;
  border: 2rpx solid #6C63FF;
}
.status-cancel {
  background: #F7F8FA;
  color: #b0b0b0;
  border: 2rpx solid #b0b0b0;
}
.status-wait {
  background: #FFF7F0;
  color: #FFB347;
  border: 2rpx solid #FFB347;
}
.nav-left {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
  height: 100%;
  padding: 0 20rpx 0 0;
  z-index: 110;
}
.back-icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-top:50px;
}


.share-accelerate {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 20rpx;
  margin: 0 16rpx 18px 16rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(108,99,255,0.08);
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
  height: 100rpx;
  min-width: 0;
}

.accelerate-icon {
  width: 64rpx;
  height: 64rpx;
  background: #6C63FF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.accelerate-icon text {
  color: #fff;
  font-size: 26rpx;
  font-weight: bold;
}

.share-content {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  min-width: 0;
  overflow: hidden;
}

.share-title {
  font-size: 28rpx;
  color: #6C63FF;
  font-weight: 600;
  margin-right: 16rpx;
  white-space: nowrap;
}

.share-subtitle {
  font-size: 24rpx;
  color: #888;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.share-accelerate .arrow-right {
  margin-left: 16rpx;
  filter: drop-shadow(0 0 2px #FFB347);
}

.share-content-vertical {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
  min-width: 0;
  overflow: hidden;
}

.share-title {
  font-size: 28rpx;
  color: #6C63FF;
  font-weight: 600;
  margin-bottom: 4rpx;
  white-space: nowrap;
}

.share-subtitle {
  font-size: 24rpx;
  color: #888;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.share-accelerate {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 20rpx;
  margin: 0 16rpx 0 16rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(108,99,255,0.08);
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
  height: 100rpx;
  min-width: 0;
}

.share-accelerate .arrow-right {
  margin-left: 16rpx;
  margin-right: 0;
  filter: drop-shadow(0 0 2px #FFB347);
  flex-shrink: 0;
  align-self: center;
}