.custom-navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 96rpx;
  background: linear-gradient(180deg, #dbeafe 0%, #e3ecfa 100%);
  padding: 0 20rpx;
  position: relative;
  padding-top:40px;
}

.nav-left {
  width: 60rpx;
  display: flex;
  align-items: center;
}
.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: 700;
  color: #222;
  letter-spacing: 2rpx;
}
.arrow {
  color: #222;
  font-size: 32rpx;
  margin: 0 8rpx;
}

.nav-right {
  width: 100rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.nav-icon {
  width: 36rpx;
  height: 36rpx;
  margin-left: 18rpx;
}

/* 日期选择栏 */
.date-scroll {
  width: 100%;
  background: linear-gradient(180deg, #e3ecfa 0%, #dbeafe  100%);
  padding-bottom: 8rpx;
  border-bottom: 1rpx solid #e5e5e5;
  white-space: nowrap;
  padding: 0 24rpx;
  box-sizing: border-box;
}
.date-tab {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 64rpx;
  padding: 8rpx 10rpx;
  margin: 0 16rpx;
  border-radius: 16rpx;
  color: #222;
  background: transparent;
}
.date-tab.active {
  background: #3a8dff;
  color: #fff;
  font-weight: 700;
}

.date-week {
  font-size: 22rpx;
  color: inherit;
  margin-bottom: 2rpx;
}

.date-main {
  font-size: 28rpx;
  font-weight: 700;
  color: inherit;
}
/* 整体背景 */
.container {
  background: #f7fafd;
  min-height: 100vh;
  padding: 0;
  margin: 0;
  width: 100vw;
  max-width: 100vw;
  box-sizing: border-box;
}

/* 顶部标题 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx 0 24rpx;
  background: #f7fafd;
  font-size: 28rpx;
}
.nav-title {
  font-weight: bold;
}
.date {
  color: #666;
}

/* 车票列表 */
.ticket-list {
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

/* 车票卡片 */
.ticket-item {
  background: #fff;
  margin: 10rpx 16rpx 14rpx 16rpx;
  padding: 24rpx 24rpx 24rpx 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
  display: flex;
  flex-direction: row;
  align-items: stretch;
  justify-content: space-between;
  position: relative;
}

/* 左侧：出发 */
.left-info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  min-width: 110rpx;
  padding-top: 8rpx;
  margin-bottom: 8rpx;
}
.left-info .time {
  font-size: 38rpx;
  font-weight: 700;
  color: #222;
  line-height: 1.1;
}
.left-info .station {
  font-size: 22rpx;
  color: #000;
  margin-top: 4rpx;
  margin-left: 7rpx;
}
.marker {
  font-size: 16rpx;
  color: #ccc;
  margin-left: 7rpx;
  margin-right: 7rpx;
}

/* 中间：车次号、时长、到达 */
.center-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  min-width: 120rpx;
  max-width: 180rpx;
  margin-bottom: 8rpx;
}
.center-info .train-number {
  font-size: 24rpx;
  font-weight: 700;
  color: #222;
  margin-bottom: 2rpx;
}
.duration-arrow {
  display: flex;
  align-items: center;
  margin: 2rpx 0 2rpx 0;
}
.arrow-line {
  width: 44rpx;
  height: 2rpx;
  background: #e0e0e0;
}
.duration-text {
  font-size: 19rpx;
  color: #888;
  margin: 0 6rpx;
}

/* 右侧：到达 */
.arrival {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 2rpx;
}
.arrival .time {
  font-size: 38rpx;
  font-weight: 700;
  color: #222;
  line-height: 1.1;
}
.arrival .station {
  font-size: 20rpx;
  color: #000;
  margin-top: 2rpx;
}

/* 右侧：票价 */
.right-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  min-width: 80rpx;
  margin-bottom: 18rpx;
}
.price {
  font-size: 32rpx;
  font-weight: 700;
  color: #e53935;
  margin-bottom: 10rpx;
}

/* 座位信息样式 */
.seat-column {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-top: 8rpx;
}

.seat-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 4rpx;
}

.seat-type {
  font-size: 20rpx;
  color: #000;
  margin-right: 8rpx;
}

.seat-count {
  font-size: 22rpx;
  font-weight: 400;
  color: #bbb;
}

.seat-available {
  color: #43a047;
}

.seat-unavailable {
  color: #43a047;
}

.seat-wait {
  color: #ff9800;
}

/* 对齐样式 */
.left-info .seat-column {
  align-items: flex-start;
}

.center-info .seat-column {
  align-items: center;
}

.arrival .seat-column {
  align-items: center;
}

.right-info .seat-column {
  align-items: flex-end;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin: 0 8rpx;
}
.seatIndex0{
  margin-top:5px;
  margin-left:5px;
}
.seatIndex1{
  margin-top:15px;
  margin-left:5px;
}
.seatIndex2{
  margin-top:8px;
  margin-left:5px;
}
.seatIndex3{
  margin-top:19px;
  margin-left:5px;
}
