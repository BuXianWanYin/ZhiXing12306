.index-page {
  background: #f6f8fa;
  min-height: 100vh;
  padding-bottom: 140rpx; /* 底部留出tabbar空间 */
}

/* 顶部标题栏样式 */
.title-bar {
  background: linear-gradient(180deg, #6ec6ff 0%, #3a8dff 100%);
  padding-top: 100rpx;   /* 适配大部分机型的状态栏 */
  padding-bottom: 20rpx;
  text-align: center;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.title {
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
}
.user-page {
  background: #F5F6FA;
  min-height: 100vh;
  margin-top:75px;
}
.user-header {
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx 24rpx 24rpx;
  background: #2196F3;
  border-radius: 0 0 32rpx 32rpx;
}
.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: #fff;
  margin-right: 14rpx;
  margin-bottom:10px;
  margin-left:10px;
}
.user-info .nickname {
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
}
.user-info .desc {
  color: #E3F2FD;
  font-size: 24rpx;
}
.quick-actions {
  display: flex;
  justify-content: space-between;
  background: #fff;
  margin: -32rpx 24rpx 24rpx 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(33,150,243,0.05);
  padding: 24rpx 0;
}
.action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 22rpx;
  color:rgb(85, 84, 84);
  font-weight: 600;
}
.action-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}
.list-group {
  background: #fff;
  margin: 0 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
}
.list-item {
  display: flex;
  align-items: center;
  padding: 32rpx 24rpx;
  border-bottom: 1px solid #F0F0F0;
}
.list-item:last-child {
  border-bottom: none;
}
.item-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
}
.item-extra {
  margin-left: auto;
  color: #888;
  font-size: 24rpx;
}
.item-extra.link {
  color: #2196F3;
}
.arrow {
  width: 24rpx;
  height: 24rpx;
  margin-left: 16rpx;
}