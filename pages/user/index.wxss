.user-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 100rpx;
}

.title-bar {
  background: linear-gradient(135deg, #1a73e8, #0d47a1);
  padding: 20rpx 30rpx;
  text-align: center;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.title {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

.user-info-card {
  background: linear-gradient(135deg, #1a73e8, #0d47a1);
  margin: 120rpx 30rpx 30rpx;
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
  background-color: #fff;
}

.user-info {
  flex: 1;
}

.nickname {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.login-tip {
  color: #fff;
  font-size: 28rpx;
}

.function-list {
  margin: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.function-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.function-item:last-child {
  border-bottom: none;
}

.function-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.function-name {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.3;
} 