<!-- pages/user/index.wxml -->
<view class="user-page">
  <!-- 顶部标题栏 -->
  <view class="title-bar">
    <text class="title">个人中心</text>
  </view>

  <!-- 用户信息卡片 -->
  <view class="user-card">
    <view class="avatar-wrapper">
      <image class="avatar" src="/images/default-avatar.png"/>
    </view>
    <view class="user-info">
      <text class="nickname">未登录</text>
      <text class="login-tip">点击登录账号</text>
    </view>
  </view>

  <!-- 功能列表 -->
  <view class="function-list">
    <view class="function-item">
      <image class="function-icon" src="/images/order.png"/>
      <text class="function-text">我的订单</text>
      <image class="arrow-right" src="/images/arrow-right.png"/>
    </view>
    <view class="function-item">
      <image class="function-icon" src="/images/passenger.png"/>
      <text class="function-text">常用乘客</text>
      <image class="arrow-right" src="/images/arrow-right.png"/>
    </view>
    <view class="function-item">
      <image class="function-icon" src="/images/address.png"/>
      <text class="function-text">常用地址</text>
      <image class="arrow-right" src="/images/arrow-right.png"/>
    </view>
    <view class="function-item">
      <image class="function-icon" src="/images/settings.png"/>
      <text class="function-text">设置</text>
      <image class="arrow-right" src="/images/arrow-right.png"/>
    </view>
  </view>

  <!-- 底部tabbar -->
  <tabbar-component></tabbar-component>
</view> 