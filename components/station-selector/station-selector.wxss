.search-results-list .station-item {
  border-bottom: 1rpx solid #eee;
  background-color: transparent;
  justify-content: space-between;
  border: none;
  background-color:rgba(212, 212, 212, 0.19);
  margin-bottom: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.search-results-list .station-city {
  display: inline;
  font-size: 24rpx;
  color: #999;
}

.search-results {
  padding: 0 30rpx;
}